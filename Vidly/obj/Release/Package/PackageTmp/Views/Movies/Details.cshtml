@model Vidly.ViewModels.CustomerMovieViewModel


@{
    ViewBag.Title = "Details of a Movie";

    
}

<h2>Details</h2>

<h3>@Html.DisplayFor(Model => Model.Movie.Name)</h3>


<ul class="list-group">
    <li class="list-group-item list-group-item-info ">Genre:  @Html.DisplayFor(Model => Model.Movie.Genre.Name)  </li>


    @{ var releaseDate = Model.Movie.ReleaseDate.ToShortDateString();}
    <li class="list-group-item list-group-item-info ">ReleaseDate:  @Html.DisplayFor(Model =>releaseDate)  </li>


    @{ var dateAdded = Model.Movie.DateAdded.ToShortDateString();}
    <li class="list-group-item list-group-item-info ">DateAdded:  @Html.DisplayFor(Model => dateAdded)  </li>
    <li class="list-group-item list-group-item-info ">NumberInStock:  @Html.DisplayFor(Model => Model.Movie.NumberInStock)  </li>

</ul>








